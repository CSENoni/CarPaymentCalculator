<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="first-col" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets top="25.0" />
	</padding>
	
	<Label text="What's your credit score?">
		<padding>
			<Insets bottom="5.0" />
		</padding>
		<font>
			<Font name="Arial Bold" size="13.0" />
		</font>
	</Label>

	<ComboBox fx:id="userCredit" promptText="Select Credit Range">
	</ComboBox>

	<Label text="Car price ($)">
		<padding>
			<Insets top="25.0" />
		</padding>
		<font>
			<Font name="Arial Bold" size="13.0" />
		</font>
	</Label>

	<TextField fx:id="userCarPrice">
	</TextField>
	
	<Label text="After negotiations" 
		textFill="#94a2a8">
		<padding>
			<Insets bottom="5.0" />
		</padding>
		<font>
			<Font name="Arial" size="13.0" />
		</font>
	</Label>

	<Label text="Trade-in / down payment ($)">
		<font>
			<Font name="Arial Bold" size="13.0" />
		</font>
		<padding>
			<Insets top="25.0" />
		</padding>
	</Label>

	<TextField fx:id="userDown">
	</TextField>
	
	<Label text="Your trade-in can be all or part of a down payment"
		textFill="#94a2a8">
		<padding>
			<Insets bottom="5.0" />
		</padding>
		<font>
			<Font name="Arial" size="13.0" />
		</font>
	</Label>

	<Label text="Interest rate (%)">
		<font>
			<Font name="Arial Bold" size="13.0" />
		</font>
		<padding>
			<Insets top="25.0" />
		</padding>
	</Label>

	<TextField fx:id="userInterest">
	</TextField>

	<Label text="A higher credit score means lower interest rates"
		textFill="#94a2a8">
		<padding>
			<Insets bottom="5.0" />
		</padding>
		<font>
			<Font name="Arial" size="13.0" />
		</font>
	</Label>

	<Label text="Number of Months">
		<font>
			<Font name="Arial Bold" size="13.0" />
		</font>
		<padding>
			<Insets top="25.0" />
		</padding>
	</Label>

	<TextField fx:id="userMonths">
	</TextField>

	<Label text="Suggested max: 36 months for used cars, 60 for new"
		textFill="#94a2a8">
		<padding>
			<Insets bottom="5.0" />
		</padding>
		<font>
			<Font name="Arial" size="13.0" />
		</font>
	</Label>
	
</VBox>
